# sxhkd
## reload configs
super + alt + Escape
	pkill -USR1 -x sxhkd

# run applications, TODO: toggle
super + space
  launcher.sh

# lock screen
super + l
  i3lock -i $HOME/.config/i3lock/lockscreen.png

# terminal emulator
super + Return
	alacritty

# bspwm
## quit bspwm
super + alt + q
	bspc quit 1 && pkill polybar
## restart bspwm
super + alt + r
	bspc wm -r
## close and kill
super + {_,shift + }w
	bspc node -{c,k}
## window focus select
super + Tab
  dmenu_window_select.bash
## window focus previous
#alt + Tab
#  TODO: switch to previous window
## window focus direction
super + {Left,Down,Up,Right}
	bspwm_focus_move.sh {west,south,north,east}
## window move direction
super + shift + {Left,Down,Up,Right}
	bspwm_euclid_move.bash {west,south,north,east}
## window resize
super + ctrl + {Left,Down,Up,Right}
	bspwm_resize.bash {west,south,north,east}
## window toggle monocle
super + f
	bspc desktop -l next

# go (Shift=move) to desktop (and focus the monitor that the desktop is located on)
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

# focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# preselect the ratio
#super + ctrl + {1-9}
#	bspc node -o 0.{1-9}

# Function Keys
XF86AudioRaiseVolume
	volume up
XF86AudioLowerVolume
	volume down
XF86AudioMute
	volume mute
XF86MonBrightnessDown
 light -U 5 
XF86MonBrightnessUp
 light -A 5
XF86Sleep
	systemctl suspend

