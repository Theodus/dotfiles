
# Display Git branch
parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
export PS1="\[\033[1;32m\]\u@\h \[\033[1;36m\]\w\[\033[1;33m\]\$(parse_git_branch)\[\033[00m\] $ "

# Clang
export CC=clang
export CXX=clang++

# Go
export GOROOT=/usr/local/go
export GOPATH=$HOME/dev/go
export GOBIN=$GOPATH/bin
export PATH=$PATH:$GOROOT/bin:$GOBIN
